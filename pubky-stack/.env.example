# Pubky Stack Environment Configuration Template
# Copy this file to .env and modify the values as needed

# Homeserver Configuration
NEXT_PUBLIC_HOMESERVER=e9qbrpxu7bdfiq863bny1xdfs4patdem8fp1grq5qe5tafep7a7o

# Nexus Configuration
NEXT_PUBLIC_NEXUS=https://nexus.pubky.fractalized.net

# HTTP Relay Configuration
NEXT_PUBLIC_DEFAULT_HTTP_RELAY=https://httprelay.pubky.fractalized.net/link

# PKARR Relays Configuration (JSON array format)
NEXT_PUBLIC_PKARR_RELAYS=["https://pkarr.pubky.app","https://pkarr.pubky.org"]

# Application Configuration
NEXT_PUBLIC_TESTNET=false
NEXT_ENABLE_PLAUSIBLE=false

# Build Configuration
PUBKY_APP_BRANCH=dev
PUBKY_APP_REF=
PUBKY_APP_DATE=

# =============================================================================
# CADDY CONFIGURATION
# =============================================================================

# Caddy admin interface (set to 'off' for production)
CADDY_ADMIN=off

# Email for Let's Encrypt SSL certificates (required for automatic HTTPS)
CADDY_EMAIL=admin@yourdomain.com

# Docker Configuration
COMPOSE_PROJECT_NAME=pubky-stack

# Network Configuration
PUBKY_NETWORK=pubky-network

# Volume Configuration
CADDY_DATA_VOLUME=pubky_caddy_data
HOMESERVER_DATA_VOLUME=pubky_homeserver_data
NEXUS_DATA_VOLUME=pubky_nexus_data